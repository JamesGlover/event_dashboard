<%= jumbotron do %>
  <h1><%= t('.greeting') %></h1>
  <p><%= t('.missing_dashboard_guide', name: @dashboard_name ) %></p>

  <% if @suggested_dashboards.present? %>

    <p><%= t('.list_suggestion') %></p>
    <ul>
      <% @suggested_dashboards.each do |db| %>
        <li><%= link_to db.name, dashboard_path(db) %></li>
      <% end %>
    </ul>
    <p><%= link_to t('.index_link'), dashboards_path %></p>

  <% else %>

    <p><%= link_to t('.index_link_no_suggestions'), dashboards_path %></p>

  <% end %>

  <p><%= t('.creation_suggestion') %></p>
  <%= link_to t('.create_dashboard'), new_dashboard_path, class:'btn btn-primary btn-lg', role:'button' %>
<% end %>
