<div>
<%= title_banner(@dashboard.name) %>
<% if @dashboard.product_lines.present? %>
  <%= render partial: "product_lines/product_line", collection: @dashboard.product_lines %>
<% else %>
  <%= jumbotron do %>
    <h1><%= t('.greeting') %></h1>
    <p><%= t('.no_product_lines_guide') %></p>
    <%= link_to t('.add_new_product_lines'), edit_dashboard_path(@dashboard), class:'btn btn-primary btn-lg', role:'button' %>
  <% end %>
<% end %>
</div>
